<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mesozi.app.buidafrique">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".BuildAfrique"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.Login" />
        <activity android:name=".activity.SignUp" android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.CustomerActivity" />
        <activity android:name=".activity.LeadsActivity" />
        <activity android:name=".activity.ReadSalesOrderActivity" />
        <activity android:name=".activity.SalesOrderActivity" />
        <activity android:name=".activity.SalesOrderDetails" />
        <activity android:name=".activity.LeadDetailsActivity" />
        <activity android:name=".activity.Compose" />
    </application>

</manifest>