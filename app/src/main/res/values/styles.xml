<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="font_style">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="home_menu_text" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:paddingTop">@dimen/dimen_menu_title_padding_top</item>
        <item name="android:textSize">@dimen/dimen_home_menu_text_size</item>
    </style>

    <style name="signup_text" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="home_progress_text" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="home_text" parent="android:Widget.TextView">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="home_text_2" parent="android:Widget.TextView">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="home_val_text" parent="android:Widget.TextView">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
